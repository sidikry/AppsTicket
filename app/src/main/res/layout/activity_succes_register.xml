<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".RegisterOneAct"
android:background="@color/bgprimary">

<ImageView
    android:id="@+id/logo_succes_register"
    android:layout_width="276dp"
    android:layout_height="320dp"
    android:layout_marginTop="14dp"
    android:src="@drawable/icon_success_signup"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/title_success_register"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:fontFamily="@font/montserratregular"
    android:text="Kamu Hebat"
    android:textAlignment="center"
    android:textColor="@color/blackprimary"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/logo_succes_register" />

<TextView
    android:id="@+id/subtitle_success_register"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:fontFamily="@font/montserratlight"
    android:lineSpacingExtra="9dp"
    android:text="Selamat Datang pada TiketSaya \n dan nikmati wisatamu"
    android:textAlignment="center"
    android:textColor="@color/greyprimary"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/title_success_register" />

<Button
    android:id="@+id/btn_explore"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginStart="48dp"
    android:layout_marginTop="14dp"
    android:layout_marginEnd="48dp"
    android:background="@drawable/bg_btn_blue_primary"
    android:fontFamily="@font/montserratmedium"
    android:text="@string/explore"
    android:textColor="#fff"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/subtitle_success_register" />


</androidx.constraintlayout.widget.ConstraintLayout>